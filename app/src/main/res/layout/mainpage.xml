<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="119dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sample1"
        android:background="@drawable/rounded"
        android:clipToOutline="true"
        />

    <View
        android:id="@+id/line_top3"
        android:layout_width="1000px"
        android:layout_height="4px"
        android:layout_marginTop="10dp"
        android:background="#D6D6D6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon" />

    <TextView
        android:id="@+id/atitle"
        android:layout_width="241dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="산지 한달된 선풍기 팝니다."
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address"
        android:layout_width="241dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="수원시 영통구 원천동"
        android:textColor="#9A9A9A"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/atitle" />

    <TextView
        android:id="@+id/price"
        android:layout_width="244dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="50,000 원"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="15dp"
        android:layout_height="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/price"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="17dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/price"
        app:srcCompat="@drawable/talk" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="17dp"
        android:layout_height="14dp"
        android:layout_marginTop="12dp"
        android:text="25"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="17dp"
        android:layout_height="14dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="12dp"
        android:text="13"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/price" />

</androidx.constraintlayout.widget.ConstraintLayout>